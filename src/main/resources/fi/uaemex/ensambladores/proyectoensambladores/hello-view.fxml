<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="740.0" prefWidth="766.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="fi.uaemex.ensambladores.proyectoensambladores.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Proyecto ensamblador">
        <font>
            <Font name="System Bold" size="24"></Font>
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Button onAction="#abrirArchivo" text="Abrir archivo"/>
        <Button onAction="#AnalizarTexto" text="Analizar" />
        <Button onAction="#Limpiar" text="Limpiar"/>

    </HBox>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <TextArea fx:id="panelIzquierdo" prefHeight="200" prefWidth="200" HBox.hgrow="ALWAYS"/>

        <TextArea fx:id="panelDerecho" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" editable="false" />
    </HBox>
</VBox>
